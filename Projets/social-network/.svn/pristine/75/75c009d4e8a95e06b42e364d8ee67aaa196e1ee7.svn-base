<?php
/* Fichier permettant l'affichage des membres de la conversation.
 */

// Connexion à la base de données
require_once("connexion_db.php");
 
if($_POST['id_conversation']!=-1) {
  // Récupération des membres
  $reponse = $bdd->prepare('SELECT * FROM chat_conversation,utilisateur WHERE id_membre=id_user AND id_conversation=? ORDER BY nom,prenom');
  $reponse->execute(array($_POST['id_conversation']));
 
  // Affichage de chaque membre (toutes les données sont protégées par htmlspecialchars)
  echo '<small>';
  $donnees = $reponse->fetch();
  echo '<strong>'.htmlspecialchars($donnees['nom'], ENT_QUOTES|ENT_SUBSTITUTE).'</strong> '.htmlspecialchars($donnees['prenom'], ENT_QUOTES|ENT_SUBSTITUTE);

  while ($donnees = $reponse->fetch()) {
    echo ' - <strong>'.htmlspecialchars($donnees['nom'], ENT_QUOTES|ENT_SUBSTITUTE).'</strong> '.htmlspecialchars($donnees['prenom'], ENT_QUOTES|ENT_SUBSTITUTE);
  }
  echo ' </small>';

  $reponse->closeCursor();
}
?>
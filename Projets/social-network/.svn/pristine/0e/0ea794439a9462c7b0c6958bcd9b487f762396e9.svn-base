html{
  height: 100%;
  width: 100%;
}
body {
  height: 85%;
  width: auto;
}
div {
  display: block;
}
span {
  display: inline;
  font-size: 14px;
}
button {
  margin-top: 5px;
  margin-left: 5px;
  margin-right: 5px;
  font-size: 12px;
}
ul {
  margin-top: 5px;
  margin-bottom: 5px;
  margin-right: 5px;
  font-size: 13px;
} 
#bandeau {
  border: solid 1px #000000;
  border-color: #000000;
  display: block;
  height: 10%;
  width: auto;
  background-image: url(images/bandeau_mosaique.png);
}
#bandeau_logo {
  float: left;
  height: 100%;
  width: 10%;
  border-right: solid 1px #000000;
  z-index: -10;
}
#liste_bandeau {
  float: left;
  display: inline-block;
  margin-left: 5%;
  vertical-align: middle;
}
#contacts {
  border: solid 1px #000000;
  border-color: #000000;
  border-top: none;
  float: left; 
  height: 100%; 
  width: 10%; 
  overflow: auto;
  background: url(images/contact_logo.png) bottom left no-repeat fixed;
  background-size: 12% auto;
  background-color: #cccccc;
}
#contacts_liste {
  height: 69.5%;
  overflow: auto;
  white-space: nowrap;
}
#select_all {
  font-size: 11px;
  margin-bottom: 15px;
  white-space: nowrap;
}
#conversations {
  border: solid 1px #000000;
  border-color: #000000;
  border-top: none;
  float: right; 
  height: 100%; 
  width: 10%;
  overflow: hidden;
  background: url(images/conversation_back.png) top left no-repeat fixed;
  background-size: 100% 95%;
}
#favoris_liste {
  height: 30%;
  width: auto;
  white-space: nowrap;
  overflow: auto;
  border-bottom: solid 1px #000000;
  background: none;
}
#liste_conversation {
  margin-top: 0px;
  margin-bottom: 0px;
  margin-right: 0px;
  height: 53.1%;
  width: auto;
  overflow: auto;
  background: none;
}
#conversation_logo {
  border-top: solid 1px #000000;
  height: auto;
  width: 100%;
}
#zone_centre {
  height: 100%;
  width: auto;
}
#zone_affichage {
  margin-top: 1px;
  height: 83%; 
  width: auto; 
  overflow: auto;
  background: url(images/affichage_back.png) center no-repeat fixed;
  background-size: 80% 80%;
}
#zone_saisie {
  border: solid 1px #000000;
  border-color: #000000;
  border-left: none;
  border-right: none;
  margin-top: 1px;
  height: 16.5%; 
  width: auto; 
  overflow: auto;
  white-space: nowrap;
  background-image: url(images/saisie_mosaique.png);
}
#saisie_logo {
  float: right;
  height: 100%;
  width: auto;
  z-index: -10;
}
#form_message {
  margin-left: 20px;
  width: 85%;
  resize: none;
  opacity: 0.5;
}
#search {
  margin-left: 3px;
  margin-right: 3px;
  width: 90%;
}
.msg_left {
  margin-left: 1%;
}
.msg_right {
  float: right;
  margin-right: 1%;
}
.item {
  margin-left: 10px;
}
.img_list {
  height: 12px;
  width: auto;
}
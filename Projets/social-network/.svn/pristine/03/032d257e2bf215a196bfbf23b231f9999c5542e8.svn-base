CREATE TABLE IF NOT EXISTS `user` (
	`id_u` INT(20) unsigned NOT NULL AUTO_INCREMENT,
	`nom_u` VARCHAR(50) NOT NULL,
	`prenom_u` VARCHAR(50) NOT NULL,
	`mail_u` VARCHAR(50) NOT NULL,
	`mdp_u` VARCHAR(50) NOT NULL,
	`date_u` DATE NOT NULL,
	PRIMARY KEY (`id_u`)
);

